<p style="color: green"><%= notice %></p>
<% if logged_in? %>
  <%= button_to 'Log Out', logout_path(current_user), method: :delete %>
<%  else %>
  <%= button_to 'Log In', login_path, method: :get  %>
  <%= button_to 'Sign Up', signup_path, method: :get %>
<% end %>

<h1>Trucks</h1>


<% if logged_in? %>
  <%= link_to "Simple view", "/trucks-simple" %>
  <%= link_to "Delete all trucks", "/trucks-delete" %>
  <div id="trucks">
    <% @trucks.each do |truck| %>
      <%= render truck %>
      <p>
        <%= link_to "Show this truck", truck %>
      </p>
    <% end %>
  </div>

  <%= link_to "New truck", new_truck_path %>
<% else %>
  <%"You must be logged in to see the trucks table."%>
<% end %>