<style>
  td {
      word-wrap: break-word;
  }
</style>

<div id="trucks">

<table class=" table table-stiped table-bordered table-hover">
  <thead class= "thread-primary">
    <tr>
      <th scope="col">Truck's Name</th>
      <th scope="col">Website</th>
      <th scope="col">Menu</th>
      <th scope="col">Schedule</th>
      <th colspan = "1"></th>
    </tr>
  </thead>
  <tbody>
    <% Truck.all.each do |truck| %>
      <tr class="table-primary table-striped">
        <td><%=truck.name%></td>
        <td><%=truck.website%></td>
        <td><%=truck.menu%></td>
        <td><%=format_schedule(truck.schedule)%></td>
        <td><%= link_to "Show this Truck", truck %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>