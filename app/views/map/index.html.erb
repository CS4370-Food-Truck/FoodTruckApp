<h1> Rowdy’s Food Truck Finder</h1>

<script type="module" src="/assets/controllers/map.js"></script>

<html lang="en">
  <head>
    <title>Add Map</title>
    <link rel="stylesheet" type="text/css" href="./assets/application.css" />
    <link rel="stylesheet" type="text/css" href="./assets/style.css" />


      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
      <link href="https://getbootstrap.com/docs/5.2/assets/css/docs.css" rel="stylesheet">
      <title>Bootstrap Example</title>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
  </head>

    <body>

    <div id="floating-panel">
      <b>Mode of Travel: </b>
      <select id="mode">
        <option value="DRIVING">Driving</option>
        <option value="WALKING">Walking</option>
        <option value="BICYCLING">Bicycling</option>
        <option value="TRANSIT">Transit</option>
      </select>
    </div>

    <h3></h3>
    <div id="map"></div>
    <script
      src="https://maps.googleapis.com/maps/api/js?key=<%= Figaro.env.MAP_API %>&callback=initMap&v=weekly"
      defer
    ></script>
<!--This is the Dropdown button that displays the table-->
  <div class="btn-group-vertical btn-danger" role="group" aria-label="Vertical button group">
      <!-- button to Go to the trucks page-->

      <%# button for truck links %>
      <div class="dropdown btn-lg">
        <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="true">
          Show more trucks
        </button>
        <ul class="dropdown-menu">
          <div id = "table">
            <%= render 'map/trucktable'%>  
          </div>
        </ul>
      </div>
    </div>
    <div class ="container"></div>
      <%= yield %>
        <div style="position: absolute; bottom: 5px;">© image midjourney, by Daniel Elkins</div>
    </body>
  </head>
</html>
